<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestCreateActivity">


    <TextView
        android:id="@+id/qn_number_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="196dp"
        android:text="Select number of questions"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/total_marks_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Select total marks"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/totalqns_rg" />

    <EditText
        android:id="@+id/total_marks_edittext"
        android:layout_width="135dp"
        android:layout_height="43dp"
        android:layout_marginStart="103dp"
        android:layout_marginLeft="103dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="95dp"
        android:layout_marginRight="95dp"
        android:ems="10"
        android:gravity="center"
        android:text="100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/total_marks_textview" />

    <Button
        android:id="@+id/test_create_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/total_marks_edittext"
        app:layout_constraintVertical_bias="0.0" />

    <RadioGroup
        android:id="@+id/totalqns_rg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/qn_number_textview">

        <RadioButton
            android:id="@+id/ten_qns_rb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="10" />

        <RadioButton
            android:id="@+id/twentyfive_qns_rb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="25" />

        <RadioButton
            android:id="@+id/fifty_qns_rb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="50" />

        <RadioButton
            android:id="@+id/hundred_qns_rb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="100" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>